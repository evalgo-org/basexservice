{
  "@context": "https://schema.org",
  "@type": "ItemList",
  "@id": "iqs-certs-query-pipeline",
  "identifier": "iqs-certs-query",
  "name": "IQS: User Certificates Query Pipeline",
  "description": "SPARQL query → Upload XSLT → Transform → Generate certificates JSON",
  "parallel": false,
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "item": {
        "@type": "ScheduledAction",
        "identifier": "query-user-certs-sparql",
        "name": "Query User Certificates from SPARQL Endpoint",
        "additionalProperty": {
          "url": "${IQS_SPARQL_URL}/v1/caches/sparql",
          "httpMethod": "POST",
          "headers": {
            "Content-Type": "application/x-www-form-urlencoded"
          },
          "body": {
            "user_id": "${USER_ID}",
            "project_id": "IQS",
            "db_name": "IQS",
            "content_type": "application/rdf+xml",
            "query": "get_user_certificate_iqs"
          }
        }
      }
    },
    {
      "@type": "ListItem",
      "position": 2,
      "item": {
        "@type": "ScheduledAction",
        "identifier": "upload-certs-xslt-1",
        "name": "Upload Certificate XSLT Stylesheet 1",
        "dependsOn": ["query-user-certs-sparql"],
        "additionalProperty": {
          "url": "registry://basexservice/v1/api/semantic/action",
          "httpMethod": "POST",
          "headers": {
            "x-api-key": "${BASEX_API_KEY}",
            "Content-Type": "application/json"
          },
          "body": {
            "@context": "https://schema.org",
            "@type": "UploadAction",
            "identifier": "upload-00-cluster-description",
            "name": "Upload 00_cluster_description.xsl",
            "object": {
              "@type": "Dataset",
              "identifier": "00-cluster-description-xsl",
              "contentUrl": "/home/opunix/iqs/xslt/00_cluster_description.xsl",
              "encodingFormat": "text/xsl"
            },
            "target": {
              "@type": "DataCatalog",
              "identifier": "IQS",
              "url": "${BASEX_URL}",
              "additionalProperty": {
                "username": "${BASEX_USER}",
                "password": "${BASEX_PASSWORD}"
              }
            },
            "targetUrl": "00_cluster_description.xsl"
          }
        }
      }
    },
    {
      "@type": "ListItem",
      "position": 3,
      "item": {
        "@type": "ScheduledAction",
        "identifier": "upload-certs-xslt-2",
        "name": "Upload Certificate XSLT Stylesheet 2",
        "dependsOn": ["upload-certs-xslt-1"],
        "additionalProperty": {
          "url": "registry://basexservice/v1/api/semantic/action",
          "httpMethod": "POST",
          "headers": {
            "x-api-key": "${BASEX_API_KEY}",
            "Content-Type": "application/json"
          },
          "body": {
            "@context": "https://schema.org",
            "@type": "UploadAction",
            "identifier": "upload-01-remove-dublicates",
            "name": "Upload 01_remove_dublicates.xsl",
            "object": {
              "@type": "Dataset",
              "identifier": "01-remove-dublicates-xsl",
              "contentUrl": "/home/opunix/iqs/xslt/01_remove_dublicates.xsl",
              "encodingFormat": "text/xsl"
            },
            "target": {
              "@type": "DataCatalog",
              "identifier": "IQS",
              "url": "${BASEX_URL}",
              "additionalProperty": {
                "username": "${BASEX_USER}",
                "password": "${BASEX_PASSWORD}"
              }
            },
            "targetUrl": "01_remove_dublicates.xsl"
          }
        }
      }
    },
    {
      "@type": "ListItem",
      "position": 4,
      "item": {
        "@type": "ScheduledAction",
        "identifier": "upload-certs-xslt-3",
        "name": "Upload Certificate XSLT Stylesheet 3",
        "dependsOn": ["upload-certs-xslt-2"],
        "additionalProperty": {
          "url": "registry://basexservice/v1/api/semantic/action",
          "httpMethod": "POST",
          "headers": {
            "x-api-key": "${BASEX_API_KEY}",
            "Content-Type": "application/json"
          },
          "body": {
            "@context": "https://schema.org",
            "@type": "UploadAction",
            "identifier": "upload-01-usercertificate-main",
            "name": "Upload 01_usercertificate_main.xsl",
            "object": {
              "@type": "Dataset",
              "identifier": "01-usercertificate-main-xsl",
              "contentUrl": "/home/opunix/iqs/xslt/01_usercertificate_main.xsl",
              "encodingFormat": "text/xsl"
            },
            "target": {
              "@type": "DataCatalog",
              "identifier": "IQS",
              "url": "${BASEX_URL}",
              "additionalProperty": {
                "username": "${BASEX_USER}",
                "password": "${BASEX_PASSWORD}"
              }
            },
            "targetUrl": "01_usercertificate_main.xsl"
          }
        }
      }
    },
    {
      "@type": "ListItem",
      "position": 5,
      "item": {
        "@type": "ScheduledAction",
        "identifier": "upload-certs-xslt-4",
        "name": "Upload Certificate XSLT Stylesheet 4",
        "dependsOn": ["upload-certs-xslt-3"],
        "additionalProperty": {
          "url": "registry://basexservice/v1/api/semantic/action",
          "httpMethod": "POST",
          "headers": {
            "x-api-key": "${BASEX_API_KEY}",
            "Content-Type": "application/json"
          },
          "body": {
            "@context": "https://schema.org",
            "@type": "UploadAction",
            "identifier": "upload-02-userCertificateMap",
            "name": "Upload 02_userCertificateMap.xsl",
            "object": {
              "@type": "Dataset",
              "identifier": "02-userCertificateMap-xsl",
              "contentUrl": "/home/opunix/iqs/xslt/02_userCertificateMap.xsl",
              "encodingFormat": "text/xsl"
            },
            "target": {
              "@type": "DataCatalog",
              "identifier": "IQS",
              "url": "${BASEX_URL}",
              "additionalProperty": {
                "username": "${BASEX_USER}",
                "password": "${BASEX_PASSWORD}"
              }
            },
            "targetUrl": "02_userCertificateMap.xsl"
          }
        }
      }
    },
    {
      "@type": "ListItem",
      "position": 6,
      "item": {
        "@type": "ScheduledAction",
        "identifier": "upload-certs-xslt-5",
        "name": "Upload Certificate XSLT Stylesheet 5",
        "dependsOn": ["upload-certs-xslt-4"],
        "additionalProperty": {
          "url": "registry://basexservice/v1/api/semantic/action",
          "httpMethod": "POST",
          "headers": {
            "x-api-key": "${BASEX_API_KEY}",
            "Content-Type": "application/json"
          },
          "body": {
            "@context": "https://schema.org",
            "@type": "UploadAction",
            "identifier": "upload-03-xml-to-json",
            "name": "Upload 03_xml-to-json.xsl",
            "object": {
              "@type": "Dataset",
              "identifier": "03-xml-to-json-xsl",
              "contentUrl": "/home/opunix/iqs/xslt/03_xml-to-json.xsl",
              "encodingFormat": "text/xsl"
            },
            "target": {
              "@type": "DataCatalog",
              "identifier": "IQS",
              "url": "${BASEX_URL}",
              "additionalProperty": {
                "username": "${BASEX_USER}",
                "password": "${BASEX_PASSWORD}"
              }
            },
            "targetUrl": "03_xml-to-json.xsl"
          }
        }
      }
    },
    {
      "@type": "ListItem",
      "position": 7,
      "item": {
        "@type": "ScheduledAction",
        "identifier": "generate-certs-json",
        "name": "Generate User Certificate JSON",
        "dependsOn": ["upload-certs-xslt-5"],
        "additionalProperty": {
          "url": "${IQS_CACHE_URL}/v1/caches/certificates/query",
          "httpMethod": "POST",
          "headers": {
            "Content-Type": "application/x-www-form-urlencoded"
          },
          "body": {
            "user_id": "${USER_ID}",
            "project_id": "IQS",
            "db_name": "IQS"
          }
        }
      }
    }
  ],
  "schedule": {
    "@type": "Schedule",
    "repeatFrequency": "PT24H",
    "description": "Every 24 hours"
  }
}
